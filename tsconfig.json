{
  "compilerOptions": {
    "target": "es2016",                                   
    "lib": ["es6", "DOM"],                                   
    "rootDir": "./",                                    
    "moduleResolution": "node",                       
    "allowJs": true,                                     
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                              
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["types/**/*.d.ts", "src", "__tests__", "bin"],
  "exclude": ["node_modules", "build"],
}
